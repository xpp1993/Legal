<?xml version="1.0" encoding="UTF-8"?>
<com.ccwant.photo.selector.widget.CCwantSquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >


        <ImageView
            android:id="@+id/ccwant_img_photo_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:scaleType="centerCrop"
            android:background="#000000"
             />

        <ImageView
            android:id="@+id/ccwant_img_is_selected_select"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_margin="3dp" />
    

</com.ccwant.photo.selector.widget.CCwantSquareLayout>