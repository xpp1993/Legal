<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commit_input_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="#F5F5F5"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/commit_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="4"
            android:background="@drawable/et_roll_shape"
            android:hint="说点什么吧..."
            android:maxLines="4"
            android:paddingBottom="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/bar2"
            android:textCursorDrawable="@drawable/color_cursor2"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/commit_bt"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@id/commit_et"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_background3"
            android:gravity="center"
            android:text="发送"
            android:textColor="@color/color_white" />
    </LinearLayout>
</RelativeLayout>
