<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <include
        android:id="@+id/activity_regist_bar"
        layout="@layout/bar2" />

    <LinearLayout
        android:id="@+id/activity_regist_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/color_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/activity_regist_et_phone"
                    style="@style/CommonStyle.input_edittext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:hint="请输入手机号" />

                <TextView
                    android:id="@+id/activity_regist_tv_getcheckcode"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="12dp"
                    android:background="#EDEDED"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textSize="16sp" />

                <View
                    android:id="@+id/view_below_phone"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/activity_regist_et_phone"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#d8d8d8" />

                <EditText
                    android:id="@+id/activity_regist_checkcode"
                    style="@style/CommonStyle.input_edittext"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_below_phone"
                    android:hint="请输入验证码" />

                <View
                    android:id="@+id/view_below_checkcode"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/activity_regist_checkcode"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#d8d8d8" />

                <EditText
                    android:id="@+id/activity_regist_setpassword"
                    style="@style/CommonStyle.input_edittext"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_below_checkcode"
                    android:hint="设置密码" />

                <View
                    android:id="@+id/view_below_reset"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/activity_regist_setpassword"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="#d8d8d8" />

                <EditText
                    android:id="@+id/activity_regist_comfirm"
                    style="@style/CommonStyle.input_edittext"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/view_below_reset"
                    android:hint="确认密码"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:background="@color/color_white">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="注册"
                android:textSize="23sp"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>