<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!--<include layout="@layout/bar2" />-->
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/register_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px86dp"
        hyphenate:titleBarLeftImage="@mipmap/nav_back"
        hyphenate:titleBarTitle="注册" />

    <LinearLayout
        android:id="@+id/register_phone_ll"
        android:layout_width="@dimen/px666dp"
        android:layout_height="@dimen/px96dp"
        android:layout_marginTop="@dimen/px84dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginRight="@dimen/px50dp"
            android:gravity="center_vertical"
            android:text="手机号"
            android:textColor="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_phone_et"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入手机号码"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_code_ll"
        android:layout_width="@dimen/px666dp"
        android:layout_height="@dimen/px96dp"
        android:layout_below="@id/fast_login_phone_ll"
        android:layout_marginTop="@dimen/px70dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginRight="@dimen/px50dp"
            android:gravity="center_vertical"
            android:text="验证码"
            android:textColor="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_code_et"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入验证码"
            android:textColor="@color/colorPrimary" />

        <TextView
            android:id="@+id/register_code_tv"
            android:layout_width="@dimen/px192dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background2"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/color_white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/register_password_ll"
        android:layout_width="@dimen/px666dp"
        android:layout_height="@dimen/px96dp"
        android:layout_marginTop="@dimen/px70dp"
        android:background="@drawable/button_background"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px50dp"
            android:layout_marginRight="@dimen/px50dp"
            android:gravity="center_vertical"
            android:text="密    码"
            android:textColor="#666666"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/register_pw_et"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请输入密码"
            android:textColor="@color/colorPrimary" />
    </LinearLayout>

    <TextView
        android:id="@+id/register_tv"
        android:layout_width="@dimen/px666dp"
        android:layout_height="@dimen/px96dp"
        android:layout_marginTop="@dimen/px108dp"
        android:background="@drawable/button_login_bg"
        android:gravity="center"
        android:text="立即注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />
</LinearLayout>
