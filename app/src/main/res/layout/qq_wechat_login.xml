<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_other_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px330dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:id="@+id/login_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/px30dp"
            android:drawableTop="@mipmap/wechat"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/login_QQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px136dp"
            android:drawablePadding="@dimen/px30dp"
            android:drawableTop="@mipmap/qq"
            android:gravity="center_horizontal" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_login_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/rl_other_login"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/tv_login_warn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三方登录"
            android:textColor="#bababa"
            android:textSize="@dimen/px30dp" />

        <TextView
            android:layout_width="@dimen/px186dp"
            android:layout_height="@dimen/px1dp"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/px34dp"
            android:layout_toLeftOf="@id/tv_login_warn"
            android:background="#d2d2d2" />

        <TextView
            android:layout_width="@dimen/px186dp"
            android:layout_height="@dimen/px1dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/px34dp"
            android:layout_toRightOf="@id/tv_login_warn"
            android:background="#d2d2d2" />
    </RelativeLayout>


</RelativeLayout>
