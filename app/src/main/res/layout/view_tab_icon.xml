<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:id="@+id/icon_tab_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="@dimen/px12dp"
        android:drawableTop="@drawable/tab_homepage"
        android:gravity="center_horizontal"
        android:text="首页"
        android:textColor="@drawable/tab_textcolor"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/icon_red_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/icon_tab_tv"
        android:layout_alignTop="@id/icon_tab_tv"
        android:src="@mipmap/message_notice"
        android:visibility="gone" />
</RelativeLayout>