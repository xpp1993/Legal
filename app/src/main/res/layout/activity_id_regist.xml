<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_check_bg"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/id_register_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px86dp"
        hyphenate:titleBarLeftImage="@mipmap/back"
        hyphenate:titleBarTitle="实名认证" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px110dp"
        android:layout_marginTop="@dimen/px30dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px44dp"
            android:text="真实姓名"
            android:textColor="@color/bar2"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/id_real_name"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px44dp"
            android:gravity="right|center_vertical"
            android:hint="请输入" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px110dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px44dp"
            android:text="身份证号码"
            android:textColor="@color/bar2"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/id_real_id"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px44dp"
            android:gravity="right|center_vertical"
            android:hint="请输入" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px32dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/px42dp"
            android:layout_marginRight="@dimen/px42dp"
            android:src="@mipmap/tishi" />

        <TextView
            android:id="@+id/id_text_warn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="实名提示内容：如为什么要实名"
            android:textColor="#bfbfbf"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/fragment_id_commit"
            android:layout_width="@dimen/px680dp"
            android:layout_height="@dimen/px98dp"
            android:layout_marginTop="@dimen/px122dp"
            android:background="@drawable/button_geren_bg"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/color_white"
            android:textSize="18sp" />

    </LinearLayout>
</LinearLayout>
