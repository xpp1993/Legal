<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#DCDCDC">

    <LinearLayout
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/btn_container_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_main"
                style="@style/main_tab_bottom"
                android:onClick="onTabClicked"
                android:drawableTop="@drawable/main_rb_draw_main"
                android:textColor="@drawable/selector_text_color_exchang"
                android:text="首页"
               />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_container_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <Button
                android:id="@+id/btn_message"
                style="@style/main_tab_bottom"
                android:onClick="onTabClicked"
                android:drawableTop="@drawable/main_rb_draw_message"
                android:textColor="@drawable/selector_text_color_exchang"
                android:text="聊天" />
            <TextView
                android:id="@+id/unread_msg_number"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="1dp"
                android:gravity="center"
                android:background="@drawable/em_unread_count_bg"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:visibility="invisible" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btn_container_my"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/btn_me"
                style="@style/main_tab_bottom"
                android:onClick="onTabClicked"
                android:drawableTop="@drawable/main_rb_draw_my"
                android:textColor="@drawable/selector_text_color_exchang"
                android:text="我的"/>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_alignTop="@id/main_bottom"
        android:background="@color/line_color_drackgray" />
</RelativeLayout>
