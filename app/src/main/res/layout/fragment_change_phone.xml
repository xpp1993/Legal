<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_me_bg"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/change_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px86dp"
        hyphenate:titleBarLeftImage="@mipmap/back"
        hyphenate:titleBarTitle="修改手机号" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/px56dp"
        android:layout_marginTop="@dimen/px44dp"
        android:text="您的原手机号为:"
        android:textColor="#999999"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/fragment_original_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px50dp"
        android:gravity="center_horizontal"
        android:text="13612544563"
        android:textColor="@color/colorPrimary"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/fragment_send_warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/px50dp"
        android:gravity="center_horizontal"
        android:text="@string/code_text"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px110dp"
        android:layout_marginTop="@dimen/px80dp"
        android:background="@color/color_white">

        <EditText
            android:id="@+id/fragment_input_code"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/px42dp"
            android:text="请输入验证码"
            android:textColor="#bbbbbb"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/change_phone_code"
            android:layout_width="@dimen/px306dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:layout_width="@dimen/px2dp"
            android:layout_height="@dimen/px70dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/change_phone_code"
            android:background="#e0e0e0" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px142dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/fragment_next"
            android:layout_width="@dimen/px680dp"
            android:layout_height="@dimen/px98dp"
            android:background="@drawable/button_geren_bg"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>
