<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_me_bg"
    android:orientation="vertical">

    <!--<include layout="@layout/bar" />-->
    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/bindphone_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        hyphenate:titleBarTitle="绑定手机号" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="绑定手机号"
            android:textColor="@color/bar2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fragment_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@mipmap/left_jiantou"
            android:gravity="right"
            android:text="15112286698"
            android:textColor="@color/color_gray"
            android:textSize="13sp" />
    </LinearLayout>
</LinearLayout>
