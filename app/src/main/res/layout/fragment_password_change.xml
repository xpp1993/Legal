<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:hyphenate="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_me_bg"
    android:orientation="vertical">

    <com.hyphenate.easeui.widget.EaseTitleBar
        android:id="@+id/change_password_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px86dp"
        hyphenate:titleBarLeftImage="@mipmap/back"
        hyphenate:titleBarTitle="重置密码" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px110dp"
        android:layout_marginTop="@dimen/px30dp"
        android:background="@color/color_white">

        <EditText
            android:id="@+id/fragment_cpw_change"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px42dp"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textColorHint="#bbbbbb" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1dp"
        android:background="#e0e0e0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px110dp"
        android:background="@color/color_white">

        <EditText
            android:id="@+id/fragment_cpw_change_confirm"
            style="@style/CommonStyle.input_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/px42dp"
            android:gravity="center_vertical"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textColorHint="#bbbbbb" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/px142dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/fragment_commit_change_pw"
            android:layout_width="@dimen/px680dp"
            android:layout_height="@dimen/px98dp"
            android:background="@drawable/button_geren_bg"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/color_white"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>
