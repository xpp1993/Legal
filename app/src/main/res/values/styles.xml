<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="main_tab_bottom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">3dip</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:textSize">12sp</item>
    </style>
    <!-- MainBar Begin -->
    <style name="MainBarTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#F1F1F1</item>
        <item name="android:alpha">1</item>
    </style>
    <!-- Common style begin-->
    <style name="CommonStyle"></style>
    <!-- Common input edittext begin-->
    <style name="CommonStyle.input_edittext" parent="CommonStyle">
        <item name="android:background">@color/Transparent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColorHint">#d8d8d8</item>
    </style>
    <!-- Common input edittext end-->
</resources>
